# Marketing Platform 환경변수 설정
# 이 파일을 .env로 복사하고 실제 값으로 변경하세요

# =================================
# 데이터베이스 설정
# =================================
POSTGRES_DB=marketing_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# 데이터베이스 연결 URL (자동 생성됨)
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/marketing_platform

# =================================
# Redis 캐시 설정
# =================================
REDIS_URL=redis://redis:6379/0

# =================================
# API 키 설정
# =================================
# Google Gemini API 키 (필수)
GOOGLE_API_KEY=your_google_api_key_here

# 소셜 로그인 설정
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret

# =================================
# 서버 보안 설정
# =================================
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =================================
# 서버 환경 설정
# =================================
DEBUG=false
ENVIRONMENT=production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80,https://yourdomain.com

# =================================
# 파일 업로드 설정
# =================================
UPLOAD_DIR=/app/static/images
MAX_UPLOAD_SIZE=10485760  # 10MB

# =================================
# 외부 API 설정
# =================================
# 공공데이터 API (선택사항)
SBDATA_API_KEY=your_sbdata_api_key  # 소상공인시장진흥공단
KOSIS_API_KEY=your_kosis_api_key    # 통계청
KAKAO_MAP_API_KEY=your_kakao_map_api_key  # 카카오맵

# =================================
# 모니터링 설정
# =================================
# Discord 웹훅 (알림용)
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Sentry 오류 추적 (선택사항)
SENTRY_DSN=your_sentry_dsn

# =================================
# 개발 환경 설정
# =================================
# 개발 모드에서만 사용
DEV_MODE=false
LOG_LEVEL=INFO

# 테스트 데이터베이스
TEST_DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/marketing_platform_test
